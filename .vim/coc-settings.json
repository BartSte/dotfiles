{
    "diagnostic.enableMessage": "always",
    "diagnostic.errorSign": "!!",
    "diagnostic.hintSign": "??",
    "diagnostic.level": "hint",
    "diagnostic.messageTarget": "float",
    "diagnostic.floatConfig": {
        "border": true,
        "rounded": true,
        "highlight": "GruvboxFg1",
        "borderhighlight": "GruvboxAquaUnderline"
    },

    "coc.preferences.useQuickfixForLocations": true,
    "dialog.floatHighlight": "GruvboxFg1",
    "dialog.floatBorderHighlight": "GruvboxAquaUnderline",
    "hover.floatConfig": {
        "border": true,
        "rounded": true,
        "highlight": "GruvboxFg1",
        "borderhighlight": "GruvboxAquaUnderline"
    },
    "pydocstring.formatter": "google",
    "pyright.disableProgressNotifications": true,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length 80"
    ],
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.integratedConsole.executeInCurrentScope": false,
    "powershell.debugging.createTemporaryIntegratedConsole": false,
    "notification.disabledProgressSources": [
        "*"
    ],
    "snippets.userSnippetsDirectory": "$HOME/.vim",
    "suggest.formatItems": [
        "abbr"
    ],
    "suggest.noselect": true,
    "suggest.floatConfig": {
        "border": true,
        "rounded": true,
        "highlight": "GruvboxFg1",
        "borderhighlight": "GruvboxAquaUnderline"
    },
    "signature.preferShownAbove": true,
    "signature.enable": false,
    "signature.floatConfig": {
        "border": true,
        "rounded": true,
        "highlight": "GruvboxFg1",
        "borderhighlight": "GruvboxAquaUnderline"
    },
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "buid/compile_commands.json",
                ".git/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                },
            "compilationDatabaseDirectory": "build"
            }
        }
    }
}
