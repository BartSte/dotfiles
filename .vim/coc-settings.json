{
    "diagnostic.enable": true,
    "diagnostic.level": "warning",
    "diagnostic.messageTarget": "echo",
    "diagnostic.autoRefresh": true,
    "diagnostic.checkCurrentLine": false,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.errorSign": "â›”",
    "diagnostic.enableMessage": "jump",
    "diagnostic.messageDelay": 1000,

    "signature.target": "echo",

    "hover.target": "echo",

    "notification.disabledProgressSources": ["*"],

    "suggest.floatEnable": false,

    "dialog.floatHighlight": null,
    "dialog.floatBorderHighlight": null,

    "coc.preferences.floatActions": false,
    "coc.preferences.messageLevel": "warning",
    "coc.preferences.enableMarkdown": false,

    "documentHighlight.timeout": 3000,

    "pydocstring.formatter": "google",

    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.linting.enabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length 80"
    ],

    "sh.enable": false,

    "git.enableGlobalStatus": false,
    "git.enableGutters": false
}
