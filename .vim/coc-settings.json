{
    "diagnostic.enableMessage": "jump",
    "diagnostic.errorSign": "â›”",
    "diagnostic.level": "warning",
    "diagnostic.messageTarget": "echo",

    "hover.target": "echo",
    "signature.target": "float",
    "suggest.floatEnable": false,
    "notification.disabledProgressSources": ["*"],
    "coc.preferences.floatActions": false,
    "coc.preferences.messageLevel": "warning",

    "pydocstring.formatter": "google",
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length 80"
    ],

    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.integratedConsole.executeInCurrentScope": false,
    "powershell.debugging.createTemporaryIntegratedConsole": false
}
