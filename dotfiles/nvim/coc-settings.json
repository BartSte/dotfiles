{
    "inlayHint.enable": false,

    "clangd.enabled": true,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.1/clangd_15.0.1/bin/clangd",
    "clangd.checkUpdates": true,
    "clangd.showDBChangedNotification": true,

    "diagnostic.level": "hint",
    "diagnostic.messageTarget": "float",

    "lua.installPreReleases": true,
    "pydocstring.formatter": "google",
    "pyright.disableProgressNotifications": true,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "flake8",
    "python.linting.flake8Args": [
        "--max-line-length 80"
    ],
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.integratedConsole.executeInCurrentScope": false,
    "powershell.debugging.createTemporaryIntegratedConsole": false,
    "snippets.userSnippetsDirectory": "$HOME/dotfiles/nvim",
    "signature.enable": true
}
